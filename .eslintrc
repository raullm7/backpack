{
  "extends": "skyscanner",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "max-len": [2, 120],
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": 0,
    "react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
    "function-paren-newline": 0,
    "react/no-typos": 0,
    "no-buffer-constructor": 0
  }
}
